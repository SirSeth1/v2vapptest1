<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/black"
    android:padding="32dp">

    <ImageView
        android:id="@+id/warningIcon"
        android:layout_width="120dp"
        android:layout_height="120dp"
        android:src="@drawable/img"
        android:contentDescription="Warning Icon"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="100dp"

        />

    <TextView
        android:id="@+id/emergencyText"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="EMERGENCY BRAKE DETECTED"
        android:textColor="#FFFFFF"
        android:textSize="30sp"
        android:fontFamily="sans-serif-medium" android:gravity="center"
        android:layout_below="@id/warningIcon"
        android:layout_marginTop="24dp"
        android:layout_centerHorizontal="true" />

    <TextView
        android:id="@+id/actionText"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Possibility of accident occurrence nearby."
        android:textColor="#9E9E9E" android:textSize="16sp"
        android:gravity="center"
        android:fontFamily="sans-serif"
        android:layout_below="@id/emergencyText"
        android:layout_marginTop="12dp"
        android:layout_centerHorizontal="true" />

</RelativeLayout>